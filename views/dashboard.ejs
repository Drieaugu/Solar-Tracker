<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="css/style.css" type="text/css">
	<link rel="apple-touch-icon" sizes="180x180" href="img/icon/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="img/icon/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="img/icon/favicon-16x16.png">
	<link rel="manifest" href="img/icon/site.webmanifest">
	<link rel="mask-icon" href="img/icon/safari-pinned-tab.svg" color="#ffde59">
	<link rel="shortcut icon" href="img/icon/favicon.ico">
	<meta name="msapplication-TileColor" content="#ffffff">
	<meta name="msapplication-config" content="img/icon/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">
	<title>Solar Tracker</title>
</head>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<a class="navbar-brand" href="/">Solar Tracker</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
			aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNav">
			<ul class="navbar-nav">
				<li class="nav-item active">
					<a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/alter">Alter data</a>
				</li>
			</ul>
		</div>
	</nav>
	<% if (error) {%>
	<div class="alert alert-warning alert-dismissible fade show scale-in-top" role="alert">
		<strong><%=error%></strong> Alter data via the <a href="/alter">alter data menu</a>.
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% } %>
	<% if (success) {%>
	<div class="alert alert-success alert-dismissible fade show scale-in-top" role="alert">
		<%=success%>
		<button type="button" class="close" data-dismiss="alert" aria-label="Close">
			<span aria-hidden="true">&times;</span>
		</button>
	</div>
	<% } %>
	<div class="container mt-4">
		<div class="row">
			<div class="col-lg-3">
				<form action="/post" method="post" autocomplete="off" autocapitalize="off">
					<h5>Add data</h5>
					<div class="form-group">
						<label for="kilowattuur">Kilowatt-hour (kWh)</label>
						<input type="number" step="0.1" min="0.0" max="50.0" name="kilowatthour" id="kilowatthour"
							class="form-control" placeholder="Kilowatt-hour" required>
						<label for="date">Date</label>
						<input type="date" name="date" id="date" class="form-control" placeholder="Datum" required>
					</div>
					<input type="submit" value="Add data" class="btn btn-outline-success">
				</form>
				<div class="form-group mt-4">
					<h5>Query month</h5>
					<label for="month">Month</label>
					<input type="month" class="form-control" id="month" name="month">
					<div class="inline-month-selector text-center mt-2">
						<span class="selector" onclick="goMonthBack()">
							<i class="fas fa-caret-left" id="month-back"></i>
						</span>
						<span class="selector-text"> Select month </span>
						<span class="selector" onclick="goMonthFuture()">
							<i class="fas fa-caret-right" id="month-forward"></i>
						</span>
					</div>
				</div>
				<input type="submit" onclick="load_graph()" id="load-btn" class="btn btn-outline-success"
					value="Load data">
			</div>
			<div class="col-lg-9 mt-3">
				<div class="row mt-5">
					<div class="col-6">
						<div class="card ">
							<div class="card-body">
								<h5 class="card-title" id="lowest_title">Highest value</h5>
								<p class="card-text" id="highest"></p>
							</div>
						</div>
					</div>
					<div class="col-6">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title" id="lowest_title">Lowest value</h5>
								<p class="card-text" id="lowest"></p>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt-4">
					<div class="col-6">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title" id="average_title">Average value</h5>
								<p class="card-text" id="average"></p>
							</div>
						</div>
					</div>
					<div class="col-6">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title" id="total_title">Total</h5>
								<p class="card-text" id="total"></p>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt-4">
					<div class="col-6">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">Something else</h5>
								<p class="card-text">x kWh</p>
							</div>
						</div>
					</div>
					<div class="col-6">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title">Something else</h5>
								<p class="card-text">x kWh</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<canvas id="line-chart" width="800" height="450"></canvas>
	</div>

	<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
		integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
	</script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
		integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
	</script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
		integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
	</script>
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
	<script>
		$(document).ready(function () {
			//Set default of month query input
			setMonthDefault();
			//Load graph with this month's data
			load_graph()
		})

		$("#month").on("change", function () {
			load_graph()
		})

		$('.alert').on('close.bs.alert', function () {
			console.log('Closed alert');
			window.location.href = "/";
		});
	</script>
	<script>
		async function load_graph() {
			//Get value from month selector and split year and month
			let monthSelector = document.getElementById('month').valueAsDate;
			let monthSelectorMonth = monthSelector.getMonth() + 1;
			let monthSelectorYear = monthSelector.getFullYear();

			document.getElementById("load-btn").value = "Loading..."

			//Perform AJAX request for data of month and year
			const request = await fetch('/ajax/getdata/' + monthSelectorMonth + '/' + monthSelectorYear);
			const data = await request.json();
			let kWhValue = Array(daysInMonth(monthSelectorMonth, monthSelectorYear)).fill(0);
			if (data.success) {
				//Recieved data contains success flag
				document.getElementById("load-btn").value = "Load data"
				for (let i = 0; i < daysInMonth(monthSelectorMonth, monthSelectorYear); i++) {
					try {
						let date = new Date(data.data[i].date)
						kWhValue[date.getDate() - 1] = data.data[i].kWh
					} catch (err) {
						//Data unknown, don't do anything
					}
				}
			}

			$("#line-chart").remove()
			$('.container').append('<canvas id="line-chart"><canvas>');
			if (data.data.length === 0) {

			}
			//Calculate highest value of Array
			$("#highest").text(Math.max.apply(Math, kWhValue) + " kWh")
			//Calculate lowest value of Array
			$("#lowest").text(Math.min.apply(Math, kWhValue) + " kWh")
			//Calculate and set average of Array
			let avg = sum(kWhValue) / kWhValue.length;
			$("#average").text(Math.round(avg) + " kWh")
			//Calculate total sum of Array
			$("#total").text(sum(kWhValue) + " kWh")
			new Chart(document.getElementById("line-chart"), {
				type: 'line',
				data: {
					labels: Array.from(Array(daysInMonth(monthSelectorMonth, monthSelectorYear))).map((e, i) =>
						i + 1),
					datasets: [{
						data: kWhValue,
						label: "kWh",
						borderColor: "#2ecc71",
						fill: true
					}]
				},
				options: {
					title: {
						display: true,
						text: 'kWh of ' + monthSelector.toLocaleString('default', {
							month: 'long'
						}) + ' ' + monthSelector.getFullYear()
					},
					scales: {
						yAxes: [{
							display: true,
							ticks: {
								beginAtZero: true,
								max: Math.max.apply(Math, kWhValue) + 5
							}
						}]
					}
				}
			});
			document.getElementById("line-chart").classList.add("d-none", "d-sm-none", "d-md-block", "d-lg-block")
		}
	</script>
	<script>
		function setMonthDefault() {
			//Get the current date -1 => Yesterday
			document.getElementById('date').valueAsDate = new Date(new Date().setDate(new Date().getDate() - 1));
			//Set maximum value of date input to today
			document.getElementById("date").max = new Date(new Date().getTime() - new Date().getTimezoneOffset() * 60000)
				.toISOString().split("T")[0];
			const cur_month = new Date().getMonth();
			const cur_year = new Date().getFullYear();
			const cur_combo = new Date()
			cur_combo.setFullYear(cur_year);
			cur_combo.setMonth(cur_month);
			//Set value of month query input to this month
			document.getElementById('month').valueAsDate = cur_combo;
		}
	</script>
	<script>
		function daysInMonth(month, year) {
			return new Date(year, month, 0).getDate();
		}
	</script>
	<script>
		document.getElementById("month").addEventListener("keyup", function (event) {
			//If enter is pressed in month query input
			if (event.keyCode === 13) {
				event.preventDefault();
				//Simulate click of button to load data
				document.getElementById("load-btn").click();
			}
		});
	</script>
	<script>
		function sum(input) {
			//If passed object is not an Array
			if (toString.call(input) !== "[object Array]")
				return false;

			let total = 0;
			for (let i = 0; i < input.length; i++) {
				//If value i of Array is not a number => continue
				if (isNaN(input[i])) {
					continue;
				}
				total += Number(input[i]);
			}
			return total;
		}
	</script>
	<script>
		function goMonthBack() {
			let monthSelector = document.getElementById('month').valueAsDate
			let monthSelectorNewMonth = monthSelector.getMonth()
			let monthSelectorYear = monthSelector.getFullYear();
			document.getElementById('month').valueAsDate = new Date(monthSelectorYear, monthSelectorNewMonth);
			load_graph()
		}

		function goMonthFuture() {
			let monthSelector = document.getElementById('month').valueAsDate
			let monthSelectorNewMonth = monthSelector.getMonth() + 2;
			let monthSelectorYear = monthSelector.getFullYear();
			document.getElementById('month').valueAsDate = new Date(monthSelectorYear, monthSelectorNewMonth);
			load_graph()
		}
	</script>
</body>

</html>